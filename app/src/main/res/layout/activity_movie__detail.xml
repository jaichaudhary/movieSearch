<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Movie_Detail">

    <android.support.v7.widget.CardView
        android:id="@+id/card_of_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_of_detail"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/name_of_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="name"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@id/image_of_detail"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/releaase_of_movie_DETAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Release Year"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/name_of_detail"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_of_detail"/>

            <TextView
                android:id="@+id/category_of_movie_DETAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="category "
                android:layout_marginLeft="10dp"
                android:layout_below="@id/releaase_of_movie_DETAIL"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_of_detail"/>

            <TextView
                android:id="@+id/Rating_of_movie_DETAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Rating"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/category_of_movie_DETAIL"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_of_detail"/>

            <TextView
                android:id="@+id/Runtime_of_movie_DETAIL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="Runtime"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/Rating_of_movie_DETAIL"
                android:textStyle="bold"
                android:layout_toRightOf="@id/image_of_detail"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeView"
        android:background="@color/cardview_light_background"
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_of_details"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.009">

        <TextView
            android:id="@+id/actorsDet"
            android:text="Actors:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writersDet"
            android:text="Writers:"
            android:layout_below="@id/actorsDet"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plotDet"
            android:layout_below="@id/writersDet"
            android:padding="5dp"
            android:text="Plot:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/boxOfficeDet"
            android:text="Box Office:"
            android:padding="5dp"
            android:layout_below="@id/plotDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>